// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        String  @id @default(uuid())
  title     String
  content   String?
  published Boolean @default(false)
  // author    User?   @relation(fields: [authorId], references: [id])
  // authorId  String?
}

model organization {
  id        String @id @default(uuid())
  name      String @unique
  employees User[]
}

model User {
  // createdAt     DateTime  @default(now()) @map(name: "created_at")
  // updatedAt     DateTime  @updatedAt @map(name: "updated_at")
  id       String  @id @default(uuid())
  name     String?
  email    String? @unique
  password String
  hiearchy Role    @default(BASIC)

  position   Position? @relation(fields: [positionId], references: [id])
  positionId String?

  organization   organization? @relation(fields: [organizationId], references: [id])
  organizationId String?
  schedule       Schedule[]
}

model Position {
  id    String @id @default(uuid())
  name  String
  users User[]
}

model Schedule {
  id            String   @id @default(uuid())
  mondayFrom    DateTime
  mondayTo      DateTime
  tuesdayFrom   DateTime
  tuesdayTo     DateTime
  wednesdayFrom DateTime
  wednesdayTo   DateTime
  thursdayFrom  DateTime
  thursdayTo    DateTime
  fridayFrom    DateTime
  fridayTo      DateTime
  saturdayFrom  DateTime
  saturdayTo    DateTime
  sundayFrom    DateTime
  sundayTo      DateTime
  User          User?    @relation(fields: [userId], references: [id])
  userId        String?
}

enum Role {
  BASIC
  ADMIN
  OWNER
}
